  <h1>All our flats (<%= @flats.count %>)</h1>
  <div class="d-flex justify-content-around align-items-center">



  <% @flats.each do |flat| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"><small><%= flat.address %></small></p>
        <p class="card-text"><%= flat.number_of_guests %> guests Â£<%= flat.price_per_night %></p>
      </div>
      <div class="card-footer">

        <%= link_to "More info", flat_path(flat) %>
      </div>
    </div>
  <% end %>
</div>
